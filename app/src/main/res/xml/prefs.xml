<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/title_appearance">

        <ListPreference
            android:key="@string/key_theme_pref"
            android:title="@string/title_theme"
            android:dialogTitle="@string/theme_dialog_title"
            android:entries="@array/entries_pref_themes"
            android:entryValues="@array/values_pref_themes" />

        <CheckBoxPreference
            android:key="checkbox_preference"
            android:title="@string/title_checkbox_ad"
            android:summary="@string/subtitle_checkbox_ad"
            android:defaultValue="false"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/title_about">

        <Preference
            android:title="@string/title_review"
            android:summary="@string/subtitle_review">
            <intent android:action="android.intent.action.VIEW"
                android:data="https://play.google.com/store/apps/details?id=com.robsterthelobster.ucibustracker"
                android:launchMode="singleInstance"/>
        </Preference>

    </PreferenceCategory>

</PreferenceScreen>